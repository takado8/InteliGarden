        </Border>
        <TextBox HorizontalAlignment="Left" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" Height="33" Margin="209,96,0,0" TextWrapping="Wrap" Text="N" TextAlignment="Center" VerticalContentAlignment="Center" Background="#444444" VerticalAlignment="Top" Width="39"/>

        <Label Content="Częstotliwość :" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.64,0.609" Margin="70,95,0,0"/>

        <Label x:Name="zone_lbl" Content="Strefa 1" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" Margin="71,43,0,0" VerticalAlignment="Top" Width="99" RenderTransformOrigin="0.64,0.609"/>
