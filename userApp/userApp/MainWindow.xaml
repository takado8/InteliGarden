        <Button Content="Następna strefa" x:Name="next_zone" Click="Next_zone_Click" Cursor="Hand" Foreground="#333333" FontFamily="Trebuchet MS" FontSize="18" HorizontalAlignment="Left" Height="48" Margin="134,312,0,0" VerticalAlignment="Top" Width="140"/>
