        <Label Content="Poziom wody: NaN" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="209" RenderTransformOrigin="0.354,0.599" Margin="411,164,0,0"/>

        <Label Content="Zbiornik wody" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" Margin="413,121,0,0" VerticalAlignment="Top" Width="145" RenderTransformOrigin="0.64,0.609"/>
        <Label Content="Pojemność max:" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="142" RenderTransformOrigin="0.48,0.578" Margin="411,209,0,0"/>
        <Label Content="Ilość wody :" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.64,0.609" Margin="70,143,0,0"/>
        <Label Content="Ostatnie podlewanie : None" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="233" RenderTransformOrigin="0.64,0.609" Margin="69,189,0,0"/>
        <Label Content="Następne podlewanie : None" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="243" RenderTransformOrigin="0.64,0.609" Margin="69,223,0,0"/>
        <Label Content="dni." FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="52" RenderTransformOrigin="0.64,0.609" Margin="254,95,0,0"/>
        <TextBox HorizontalAlignment="Left" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" Height="33" Margin="184,144,0,0" TextWrapping="Wrap" Text="N" TextAlignment="Center" VerticalContentAlignment="Center" Background="#444444" VerticalAlignment="Top" Width="39"/>
        <Label Content="ml." FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="52" RenderTransformOrigin="0.64,0.609" Margin="228,147,0,0"/>
        <TextBox HorizontalAlignment="Left" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" Height="33" Margin="556,209,0,0" TextWrapping="Wrap" Text="N" TextAlignment="Center" VerticalContentAlignment="Center" Background="#444444" VerticalAlignment="Top" Width="39"/>
        <Label Content="Czujnik wilgotności : None" FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="243" RenderTransformOrigin="0.64,0.609" Margin="70,257,0,0"/>
        <Label Content="litrów." FontFamily="Trebuchet MS" FontSize="18" Foreground="Silver" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.64,0.609" Margin="596,209,0,0"/>

    </Grid>
</Window>
